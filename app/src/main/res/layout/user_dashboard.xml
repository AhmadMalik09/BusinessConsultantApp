<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/useName"
        android:text="Name"
        android:textSize="25sp"
        android:textColor="@color/black"
        android:paddingTop="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="180dp">
    </TextView>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/logoutBtn"
        android:layout_toRightOf="@id/useName"
        android:src="@drawable/logoutimg"
        android:layout_marginTop="10dp">
    </ImageView>

    <ImageView
        android:id="@+id/business_image"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:paddingTop="50dp"
        android:src="@drawable/businesscover"
        android:layout_marginTop="20dp"
        android:scaleType="centerCrop">


    </ImageView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="545dp"
        android:layout_below="@+id/business_image"
        android:background="@color/grey">

        <TextView
            android:id="@+id/oppertunities"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:paddingLeft="15dp"
            android:text="Investment Opportunities"
            android:textColor="@color/black"
            android:textSize="30sp"
            android:textStyle="bold">


        </TextView>

        <LinearLayout
            android:id="@+id/first_row"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/oppertunities"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="35dp"
            android:layout_marginRight="15dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/real_estate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/square"
                android:drawableTop="@drawable/property"
                android:paddingLeft="5dp"
                android:paddingTop="5dp"
                android:paddingRight="5dp"
                android:paddingBottom="5dp"
                android:text="\nReal Estate"
                android:textColor="@color/black" />

            <Button
                android:id="@+id/stock_market"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:background="@drawable/square"
                android:drawableTop="@drawable/stock_market"
                android:paddingLeft="5dp"
                android:paddingTop="5dp"
                android:paddingRight="5dp"
                android:paddingBottom="5dp"
                android:text="\n Stock Market"
                android:textColor="@color/black" />

            <Button
                android:id="@+id/crptocurrency"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/square"
                android:drawableTop="@drawable/cryptoc"
                android:paddingLeft="5dp"
                android:paddingTop="5dp"
                android:paddingRight="5dp"
                android:paddingBottom="5dp"
                android:text="\nCrypto"
                android:textColor="@color/black" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/second_row"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/first_row"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="15dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/Ecommerce"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/square"
                android:drawableTop="@drawable/ecommerce"
                android:padding="5dp"
                android:text="\nE-Commerce"
                android:textColor="@color/black" />

            <Button
                android:id="@+id/agriculture"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:background="@drawable/square"
                android:drawableTop="@drawable/agriculture"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:text="\nAgriculture"
                android:textColor="@color/black" />

            <Button
                android:id="@+id/farming"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/square"
                android:drawableTop="@drawable/farming"
                android:padding="5dp"

                android:text="\nFarming"
                android:textColor="@color/black" />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/third_row"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/second_row"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="15dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/IT"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/square"
                android:drawableTop="@drawable/laptop"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:text="\nIT"
                android:textColor="@color/black" />

            <Button
                android:id="@+id/enterpreneur"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:background="@drawable/square"
                android:drawableTop="@drawable/startup"
                android:paddingLeft="16dp"
                android:paddingTop="8dp"
                android:paddingRight="10dp"
                android:paddingBottom="5dp"
                android:text="\nNew StartUp"
                android:textColor="@color/black" />

        </LinearLayout>


    </RelativeLayout>

</RelativeLayout>