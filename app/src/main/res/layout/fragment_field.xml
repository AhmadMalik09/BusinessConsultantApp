<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.fieldFragment">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/Linear2"
                android:orientation="horizontal"
                android:paddingLeft="25dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                >
                <ImageView
                    android:layout_width="33dp"
                    android:layout_height="33dp"
                    android:src="@drawable/ic_baseline_article_24" />
                <TextView
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:textSize="15dp"
                    android:textColor="@color/black"
                    android:text="Field: "/>
                <TextView
                    android:id="@+id/field"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:textSize="15dp"
                    android:gravity="right"
                    android:textColor="@color/black"
                    android:layout_marginRight="50dp"
                    android:text="RealEstate"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/Linear3"
                android:orientation="horizontal"
                android:paddingLeft="25dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/Linear2"
                android:layout_marginTop="20dp"
                >
                <ImageView
                    android:layout_width="33dp"
                    android:layout_height="33dp"
                    android:src="@drawable/ic_baseline_app_registration_24" />
                <TextView
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:textSize="15dp"
                    android:textColor="@color/black"
                    android:text="Certificates : "/>
                <TextView
                    android:id="@+id/certificates"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:textSize="15dp"
                    android:gravity="right"
                    android:textColor="@color/black"
                    android:layout_marginRight="50dp"
                    android:text="Best performer"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/Linear4"
                android:orientation="horizontal"
                android:paddingLeft="25dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/Linear3"
                android:layout_marginTop="20dp"
                >
                <ImageView
                    android:layout_width="33dp"
                    android:layout_height="33dp"
                    android:src="@drawable/ic_baseline_leaderboard_24" />
                <TextView
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:textSize="15dp"
                    android:textColor="@color/black"
                    android:text="Experience: "/>
                <TextView
                    android:id="@+id/experience"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:textSize="15dp"
                    android:gravity="right"
                    android:textColor="@color/black"
                    android:layout_marginRight="50dp"
                    android:text="3 Year"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/Linear5"
                android:orientation="horizontal"
                android:paddingLeft="25dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/Linear4"
                android:layout_marginTop="20dp"
                >
                <ImageView
                    android:layout_width="33dp"
                    android:layout_height="33dp"
                    android:src="@drawable/ic_baseline_add_business_24" />
                <TextView
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:textSize="15dp"
                    android:textColor="@color/black"
                    android:text="Working Organizations: "/>
                <TextView
                    android:id="@+id/working_org"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:textSize="15dp"
                    android:gravity="right"
                    android:textColor="@color/black"
                    android:layout_marginRight="50dp"
                    android:text="abcd"/>
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>


</FrameLayout>