<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    >
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:context=".user_register"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Register As Consultant"
                android:textColor="#00ADC1"
                android:textSize="25dp"
                android:textStyle="bold"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="20dp">

            </TextView>

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profile_image"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:src="@drawable/profile"
                app:civ_border_color="#00ADC1"
                android:layout_gravity="center"
                app:civ_border_width="2dp" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/floatingActionButton"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:clickable="true"
                app:srcCompat="@android:drawable/ic_menu_camera"
                android:layout_gravity="right"
                android:layout_marginRight="110dp"
                android:layout_marginTop="-50dp"/>

            <Spinner
                android:id="@+id/spinner1"
                android:layout_width="380dp"
                android:layout_height="wrap_content"
                android:background="@drawable/invisible_textview_design"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="20dp"
                android:spinnerMode="dropdown"/>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/parent.TextLayout"

                android:paddingRight="10dp"
                android:paddingLeft="10dp">
                <com.google.android.material.textfield.TextInputEditText
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/consultant_Name"
                    android:hint="Your Name"
                    android:layout_marginBottom="10dp">
                </com.google.android.material.textfield.TextInputEditText>
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/parent.TextLayout"
                android:paddingRight="10dp"
                android:paddingLeft="10dp"
                android:layout_marginBottom="10dp">
                <com.google.android.material.textfield.TextInputEditText

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/consultant_Email"
                    android:hint="Email"
                    android:inputType="textEmailAddress"
                    >
                </com.google.android.material.textfield.TextInputEditText>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/parent.TextLayout"
                android:paddingRight="10dp"
                android:paddingLeft="10dp"
                android:layout_marginBottom="10dp">
                <com.google.android.material.textfield.TextInputEditText

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/consultant_Phone"
                    android:hint="Phone"
                    android:inputType="phone"
                    >
                </com.google.android.material.textfield.TextInputEditText>
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/parent.TextLayout"
                android:paddingRight="10dp"
                android:paddingLeft="10dp"
                android:layout_marginBottom="10dp">
                <com.google.android.material.textfield.TextInputEditText

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/consultant_Password"
                    android:hint="Password"
                    android:inputType="textPassword"
                    >
                </com.google.android.material.textfield.TextInputEditText>
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/parent.TextLayout"
                android:paddingRight="10dp"
                android:paddingLeft="10dp"
                android:layout_marginBottom="10dp">
                <com.google.android.material.textfield.TextInputEditText

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/consultant_CNIC"
                    android:hint="CNIC"
                    >
                </com.google.android.material.textfield.TextInputEditText>
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/parent.TextLayout"
                android:paddingRight="10dp"
                android:paddingLeft="10dp"
                android:layout_marginBottom="10dp">
                <com.google.android.material.textfield.TextInputEditText

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/consultant_edu"
                    android:hint="Qualification"
                    >
                </com.google.android.material.textfield.TextInputEditText>
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/parent.TextLayout"
                android:paddingRight="10dp"
                android:paddingLeft="10dp"
                android:layout_marginBottom="10dp">
                <com.google.android.material.textfield.TextInputEditText

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/specification"
                    android:hint="Specification"
                    >
                </com.google.android.material.textfield.TextInputEditText>
            </com.google.android.material.textfield.TextInputLayout>


            <Button
                android:id="@+id/nextBtn"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginTop="15dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/login_button_design"
                android:text="Next"

                android:textColor="@color/white" />


        </LinearLayout>
    </ScrollView>
</LinearLayout>