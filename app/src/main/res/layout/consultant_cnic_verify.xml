<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Upload CNIC Front "
        android:textColor="#00ADC1"
        android:textSize="25dp"
        android:textStyle="bold"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="20dp">

    </TextView>


    <ImageView
        android:id="@+id/cnicFrnt_img"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/invisible_textview_design"/>

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/CNICFrntBtn"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:clickable="true"
                app:srcCompat="@android:drawable/ic_menu_camera"
                android:layout_gravity="right"
                android:layout_marginTop="-50dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Upload CNIC Back "
            android:textColor="#00ADC1"
            android:textSize="25dp"
            android:textStyle="bold"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="20dp">

        </TextView>


        <ImageView
            android:id="@+id/cnicBck_img"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/invisible_textview_design"/>
            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/CNICBckBtn"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:clickable="true"
                app:srcCompat="@android:drawable/ic_menu_camera"
                android:layout_gravity="right"
                android:layout_marginTop="-50dp"/>


        <ImageButton
        android:id="@+id/next_dashboard"
        android:layout_width="150dp"
        android:layout_height="70dp"
        android:layout_gravity="right"
        android:layout_marginTop="60dp"
        android:src="@drawable/next_btn"
        android:paddingRight="15dp">

    </ImageButton>
        </LinearLayout>
    </ScrollView>
</LinearLayout>